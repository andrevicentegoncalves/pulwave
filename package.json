{
  "name": "pulwave",
  "private": true,
  "version": "0.0.0",
  "packageManager": "npm@10.9.2",
  "type": "module",
  "workspaces": [
    "apps/web",
    "apps/web/*",
    "packages/shared/*",
    "packages/shared/config/*",
    "packages/entities/*",
    "packages/features/*",
    "packages/widgets",
    "packages/pages/*",
    "packages/integrations/mcp/*",
    "packages/internal/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:root": "vite",
    "build": "turbo run build",
    "build:root": "vite build",
    "build:analyze": "vite build && echo 'Bundle stats available at dist/bundle-stats.html'",
    "size": "size-limit",
    "lint": "turbo run lint",
    "lint:root": "eslint .",
    "lint:tokens": "stylelint \"packages/**/*.scss\" \"apps/**/*.scss\" --custom-syntax postcss-scss",
    "lint:tokens:fix": "stylelint \"packages/**/*.scss\" \"apps/**/*.scss\" --custom-syntax postcss-scss --fix",
    "preview": "vite preview",
    "test": "turbo run test",
    "test:root": "vitest run",
    "test:unit": "turbo run test:unit",
    "audit:contrast": "node packages/foundation/scripts/color/audit-contrast.cjs",
    "lint:styles": "node packages/foundation/scripts/styles/lint-styles.cjs",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "typecheck": "turbo run typecheck",
    "check:circular": "madge --circular --extensions ts,tsx packages/data/",
    "check:architecture": "node scripts/check-architecture.js",
    "check:all": "turbo run typecheck lint && npm run check:circular && npm run check:architecture",
    "clean": "turbo run clean",
    "gen:types": "node scripts/generate-db-types.js",
    "create:package": "node scripts/create-package.js",
    "prepare": "husky"
  },
  "size-limit": [
    {
      "name": "Total Bundle",
      "path": "dist/assets/*.js",
      "limit": "500 KB",
      "gzip": true
    }
  ],
  "dependencies": {
    "ai": "^6.0.0",
    "@ai-sdk/react": "^3.0.0",
    "@react-spring/web": "^10.0.3",
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-query": "^5.90.12",
    "@tiptap/extension-link": "^2.1.0",
    "@tiptap/extension-placeholder": "^2.1.0",
    "@tiptap/react": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "country-flag-icons": "^1.6.4",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.3",
    "react-resizable-panels": "^2.0.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.6.0",
    "zod": "^3.23.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix --custom-syntax postcss-scss"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.41.0",
    "@size-limit/file": "^12.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "glob": "^11.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.4.0",
    "react-hook-form": "^7.71.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.94.0",
    "size-limit": "^12.0.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "turbo": "^2.7.4",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.14"
  }
}
