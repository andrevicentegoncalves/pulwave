{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MCP server configuration for Pulwave",
  "mcpServers": {
    "pulwave-supabase": {
      "command": "node",
      "args": ["packages/mcp/supabase/dist/cli.js"],
      "cwd": "${workspaceFolder}",
      "env": {
        "SUPABASE_URL": "${VITE_SUPABASE_URL}",
        "SUPABASE_ANON_KEY": "${VITE_SUPABASE_ANON_KEY}"
      },
      "description": "Pulwave Supabase database MCP server - query profiles, translations, properties, and admin data"
    },
    "pulwave-github": {
      "command": "node",
      "args": ["packages/mcp/github/dist/cli.js"],
      "cwd": "${workspaceFolder}",
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}",
        "GITHUB_OWNER": "pulwave",
        "GITHUB_REPO": "pulwave"
      },
      "description": "GitHub MCP server - query repositories, PRs, issues, and files"
    },
    "pulwave-vercel": {
      "command": "node",
      "args": ["packages/mcp/vercel/dist/cli.js"],
      "cwd": "${workspaceFolder}",
      "env": {
        "VERCEL_TOKEN": "${env:VERCEL_TOKEN}",
        "VERCEL_TEAM_ID": "${env:VERCEL_TEAM_ID}",
        "VERCEL_PROJECT_ID": "${env:VERCEL_PROJECT_ID}"
      },
      "description": "Vercel MCP server (shell) - deployments, domains, env vars (not yet configured)"
    },
    "pulwave-stripe": {
      "command": "node",
      "args": ["packages/mcp/stripe/dist/cli.js"],
      "cwd": "${workspaceFolder}",
      "env": {
        "STRIPE_SECRET_KEY": "${env:STRIPE_SECRET_KEY}",
        "STRIPE_PUBLISHABLE_KEY": "${env:STRIPE_PUBLISHABLE_KEY}"
      },
      "description": "Stripe MCP server (shell) - customers, subscriptions, payments (not yet configured)"
    },
    "cloudflare": {
      "command": "npx",
      "args": ["-y", "@cloudflare/mcp-server-cloudflare"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${env:CLOUDFLARE_API_TOKEN}",
        "CLOUDFLARE_ACCOUNT_ID": "${env:CLOUDFLARE_ACCOUNT_ID}"
      },
      "description": "Cloudflare MCP server - Workers, R2, D1, KV, edge AI, deployments"
    }
  }
}